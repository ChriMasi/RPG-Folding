{
  "name": "vscode-rpg-folding",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.1.1",
  "publisher": "Chri-Masi",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:rpg",
    "onLanguage:rpgle"
  ],
  "contributes": {
  "languages": [
      {
        "id": "rpg",
    "aliases": ["RPG", "RPG fixed"],
    "extensions": [".rpg", ".rpgf", ".rpg_fix"]
      },
      {
        "id": "rpgle",
    "aliases": ["RPGLE", "RPG IV"],
    "extensions": [".rpgle", ".sqlrpgle", ".rpg4"]
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "rpgFolding.enableFreeFormFallback": {
          "type": "boolean",
          "default": false,
          "description": "%config.enableFreeForm.description%"
        },
        "rpgFolding.highlight.colorPickerInfo": {
          "type": "null",
          "markdownDescription": "%config.colorPickerInfo.markdownDescription%",
          "description": "%config.colorPickerInfo.description%"
        },
        "rpgFolding.highlight.enable": {
          "type": "boolean",
          "default": true,
          "description": "%config.highlight.enable.description%"
        },
        "rpgFolding.highlight.blockKeywordColor": {
          "type": "string",
          "default": "#C79C00",
          "description": "%config.highlight.blockKeywordColor.description%"
        },
        "rpgFolding.highlight.elseColor": {
          "type": "string",
          "default": "#FA9134",
          "description": "%config.highlight.elseColor.description%"
        },
        "rpgFolding.highlight.matchLineColor": {
          "type": "string",
          "default": "#89CFF0",
          "description": "%config.highlight.matchLineColor.description%"
        },
        "rpgFolding.highlight.matchElseLineColor": {
          "type": "string",
          "default": "#FFB74D",
          "description": "%config.highlight.matchElseLineColor.description%"
        },
        "rpgFolding.highlight.callColor": {
          "type": "string",
          "default": "#CF79F7",
          "description": "%config.highlight.callColor.description%"
        },
        "rpgFolding.highlight.onlyColumn26": {
          "type": "boolean",
          "default": true,
          "description": "%config.highlight.onlyColumn26.description%"
        }
      }
    }
    ,
    "commands": [
      {
        "command": "rpgFolding.pinBlockHighlight",
        "title": "%command.pinBlockHighlight.title%"
      },
      {
        "command": "rpgFolding.unpinBlockHighlight",
        "title": "%command.unpinBlockHighlight.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rpgFolding.pinBlockHighlight",
          "when": "rpgFolding.showPin && (editorLangId == rpg || editorLangId == rpgle)",
          "group": "navigation@0"
        },
        {
          "command": "rpgFolding.unpinBlockHighlight",
          "when": "rpgFolding.showUnpin && (editorLangId == rpg || editorLangId == rpgle)",
          "group": "navigation@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
  ,
  "repository": {
    "type": "git",
    "url": "https://github.com/ChriMasi/RPG-Folding"
  }
}
